{
  "name": "apiquest",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspace @apiquest/types build && yarn workspace @apiquest/fracture build && yarn workspaces foreach -A --include '@apiquest/plugin-*' run build",
    "build:fracture": "yarn workspace @apiquest/fracture build",
    "build:plugins": "yarn workspaces foreach -A --include '@apiquest/plugin-*' run build",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "test": "yarn workspace @apiquest/fracture test",
    "test:fracture": "yarn workspace @apiquest/fracture test",
    "test:coverage": "yarn workspace @apiquest/fracture test -- --coverage",
    "test:watch": "yarn workspace @apiquest/fracture test -- --watch",
    "lint": "eslint packages/*/src packages/*/tests --ext .ts,.tsx",
    "lint:fix": "eslint packages/*/src packages/*/tests --ext .ts,.tsx --fix",
    "typecheck": "yarn workspaces foreach -A run typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.0.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@4.12.0"
}
